#!/bin/sh

set -e

if [ $# -ne 1 ]; then
  echo "Usage: install-node VERSION"
  echo "See https://nodejs.org/en/about/releases/"
  exit 1
fi

mkdir -p "$HOME/opt"
cd "$HOME/opt"

if [ -d "node-$1-linux-x64" ]; then
  echo "node $1 already installed in $HOME/opt/"
  exit 0
fi

set -x
curl -L "https://nodejs.org/dist/$1/node-$1-linux-x64.tar.xz" | tar -x --xz
touch node-$1-linux-x64/.nobck
