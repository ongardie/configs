// This contains settings for the VS Code or VSCodium editor. It's allowed to
// have comments (open it as "JSON with Comments"). It goes in
// `~/.config/VSCodium/User/settings.json` or similar on Linux.
{
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.allowCompoundWords": true,
    "cSpell.userWords": [
        "ongardie",
        "ongaro",
        "preact",
        "roboto",
        "unmount",
        "unmounting"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.autoClosingBrackets": "never",
    // This is really nice on projects that do it, but really awful when you
    // accidentally run it on projects that shouldn't be re-formatted. So set
    // this to true for specific projects only.
    "editor.formatOnSave": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        79
    ],
    "eslint.run": "onSave",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.rpt2_cache/**": true,
        "**/node_modules/**": true,
        "**/env/**": true
    },
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "update.mode": "none",
    "vim.handleKeys": {
        "<C-f>": false
    },
    "vim.hlsearch": true,
    "vim.ignorecase": false,
    "vim.normalModeKeyBindings": [
        // Make j and k respect line wrapping.
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],
    // I want textwidth=79 like normal vim, but it seems to take 82 to get that
    // behavior (for gq to wrap after 79).
    "vim.textwidth": 82,
    "window.zoomLevel": 1,
    "workbench.editor.closeOnFileDelete": true,

    "go.formatTool": "goimports",
    "html.autoClosingTags": false,
    "javascript.suggest.autoImports": false,
    "python.dataScience.askForKernelRestart": false,
    "typescript.suggest.autoImports": false,
    "typescript.surveys.enabled": false,
    "[typescript]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never"
    },
    "[typescriptreact]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never"
    }
}
